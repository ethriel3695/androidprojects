<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elllistech.weatherforecast.WeatherForecastFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forecastFragment"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/txtForecastTitle"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textAlignment="viewStart"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="106dp"
            android:id="@+id/txtTemperature"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="156dp"
            android:id="@+id/txtRelativeHumidity"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_centerInParent="false"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="196dp"
            android:id="@+id/txtFeelsLikeF"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_centerInParent="false"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:id="@+id/txtWeatherCondition"
            android:textColor="@android:color/black"
            android:layout_marginTop="66dp"
            android:textSize="18sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtWindMPH"
            android:textColor="@android:color/black"
            android:layout_marginTop="236dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPressureIn"
            android:textColor="@android:color/black"
            android:layout_marginTop="276dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_centerInParent="false"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:id="@+id/txtPrecipTodayIn"
            android:textColor="@android:color/black"
            android:layout_marginTop="306dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_centerInParent="false"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVisibilityMI"
            android:textColor="@android:color/black"
            android:layout_marginTop="346dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_centerInParent="false"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="117dp"
            android:id="@+id/imageIconURL"
            android:layout_marginLeft="140dp"
            android:contentDescription="@string/imageIconURL" />
    </RelativeLayout>
</FrameLayout>
